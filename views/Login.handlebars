<div class="out-div">

    <section class="main-div">
        <div class="picture-div">
          <img src="/img/dog.jpg" alt="Profile Picture" class="profile-picture">
        </div>
        <div class="text-div">
          <h2>{{user.firstName}} </h2>
        </div>

        
    </section>

    <hr class="line" style="margin: 0%; ">
  
  <div class="main-div-two">
