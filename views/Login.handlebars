              <input type="date" class="input" name="date" placeholder="Date" required>
            </div>
            <div class="input-0">
              <input type="time" class="input" name="time" placeholder="Time" required> 
            </div>
            <div class="input-1">
              <input type="submit" class="button" placeholder="submit">
            </div>
          </div>
       </form>
      </div>

    </section>

    <section class="section-1-0">

      <div class="input-2">
        <input type="button" value="Show logs" onclick="showlogs()">
      </div>

     </section>

     <section class="section-1-1" id="main-section-home">
      <div class="section-div-1">
        <h3>Hello I am here {{user.firstName}}</h3>
        

      </div>
    </section>

   
    
  </div>
</div>

